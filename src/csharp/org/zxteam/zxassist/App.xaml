<Application x:Class="org.zxteam.zxassist.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar"
             xmlns:shell="clr-namespace:org.zxteam.zxassist"
             ShutdownMode="OnExplicitShutdown">
	<Application.Resources>
		<ContextMenu x:Shared="false" x:Key="SysTrayMenu">
			<TextBlock Text="Press F12 for make screenshot"/>
			<Separator />
			<MenuItem Header="Show Window" Command="{Binding ShowWindowCommand}" />
			<MenuItem Header="Hide Window" Command="{Binding HideWindowCommand}" />
			<Separator />
			<MenuItem Header="Show DemoToolWindow" Command="{Binding ShowDemoToolWindowCommand}" />
			<MenuItem Header="Hide DemoToolWindow" Command="{Binding HideDemoToolWindowCommand}" />
			<Separator />
			<MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}" />
		</ContextMenu>

		<tb:TaskbarIcon x:Key="AppTrayIcon"
						IconSource="pack://application:,,,/resources/zxassist_48x48.ico"
						ToolTipText="ZXAssist"
						DoubleClickCommand="{Binding ActivateWindowCommand}"
						ContextMenu="{StaticResource SysTrayMenu}"/>

	</Application.Resources>
</Application>